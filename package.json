{
	"name": "nomad-youtube",
	"version": "1.0.0",
	"description": "project - cloning Youtube using Vanilla Javascript and Node.js",
	"scripts": {
		"dev:server": "nodemon --exec babel-node src/init.js --delay 2 --ignore '.scss' --ignore 'static' ",
		"dev:assets": "cd src && WEBPACK_ENV=development webpack -w",
		"build:assets": "cd src && WEBPACK_ENV=production webpack",
		"build:server": "babel src --out-dir build --ignore 'src/assets','src/static','src/webpack.config.js'",
		"copyAll": "cp -R src/static build && cp -R src/views build",
		"prebuild": "rm -rf build",
		"build": "npm run build:server && npm run build:assets && npm run copyAll",
		"prestart": "npm run build",
		"start": "PRODUCTION=true node build/init.js"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@babel/cli": "^7.12.1",
		"@babel/core": "^7.11.6",
		"@babel/node": "^7.12.1",
		"@babel/polyfill": "^7.12.1",
		"@babel/preset-env": "^7.11.5",
		"autoprefixer": "^10.0.1",
		"aws-sdk": "^2.772.0",
		"axios": "^0.20.0",
		"babel-loader": "^8.1.0",
		"body-parser": "^1.19.0",
		"connect-mongo": "^3.2.0",
		"cookie-parser": "^1.4.5",
		"css-loader": "^5.0.0",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-flash": "0.0.2",
		"express-session": "^1.17.1",
		"get-blob-duration": "^1.1.2",
		"helmet": "^4.1.1",
		"mini-css-extract-plugin": "^1.0.0",
		"mongoose": "^5.10.7",
		"morgan": "^1.10.0",
		"multer": "^1.4.2",
		"multer-s3": "^2.9.0",
		"node-sass": "^4.14.1",
		"passport": "^0.4.1",
		"passport-facebook": "^3.0.0",
		"passport-github": "^1.1.0",
		"passport-github2": "^0.1.12",
		"passport-local": "^1.0.0",
		"passport-local-mongoose": "^6.0.1",
		"postcss-loader": "^4.0.4",
		"pug": "^3.0.0",
		"sass-loader": "^10.0.3",
		"webpack": "^5.1.3",
		"webpack-cli": "^4.0.0"
	},
	"devDependencies": {
		"eslint": "^7.2.0",
		"nodemon": "^2.0.4"
	},
	"browserslist": [
		"defaults"
	]
}
